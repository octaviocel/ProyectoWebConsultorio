@model IEnumerable<ProyectoConsultorio.Models.Expediente>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.paciente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.empleado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Presion1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Presion2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Peso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Altura)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CronicoDegenerativa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Operaciones)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Alergias)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reflejos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movimientos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Observaciones)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.paciente.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.empleado.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Presion1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Presion2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Peso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Altura)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CronicoDegenerativa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Operaciones)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alergias)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reflejos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Movimientos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Observaciones)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id_expediente">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id_expediente">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id_expediente">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
